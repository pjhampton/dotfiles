# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.txt]
indent_size = 2
indent_style = tab
max_line_length = 80

[*.{js,json}]
indent_size = 4
indent_style = space

[*.java]
indent_size = 4
indent_style = space
max_line_length = 80;

[*.{sc,scala,kt}]
indent_size = 2
indent_style = space
max_line_length = 80;

[*.{clj,cljs}]
indent_size = 2
indent_style = space
max_line_length = 40;

[*.{c,cpp,h}]
indent_size = 8
indent_style = tab
max_line_length = 80

[*.{rb,py}]
indent_size = 2
indent_style = space

[*.go]
indent_size = 8
indent_style = tab

[*.md]
indent_size = 2
indent_style = space

[*.dfy]
indent_size = 4
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
max_line_length = 72
